<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jeremiezipfel.calculette.MainActivity">

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textSize="@dimen/size_principal"
        android:textColor="@color/colorPrimaryGrey"
        android:id="@+id/btn_five"
        android:layout_below="@+id/btn_seven"
        android:layout_toRightOf="@+id/btn_four" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textSize="@dimen/size_principal"
        android:textColor="@color/colorPrimaryGrey"
        android:layout_below="@+id/btn_nine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_four" />

    <TextView
        android:text="0"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:id="@+id/textview_calcul"
        android:layout_toLeftOf="@+id/btn_divider"
        android:layout_toStartOf="@+id/btn_divider" />

    <Button
        android:text="9"
        android:textSize="@dimen/size_principal"
        android:textColor="@color/colorPrimaryGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_clear"
        android:background="@color/colorWhite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_nine" />

    <Button
        android:text="@string/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/btn_clear"
        android:background="@color/colorBlue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="1dp"
        android:layout_toStartOf="@+id/btn_multiplicator"
        android:layout_toLeftOf="@+id/btn_multiplicator"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp" />

    <Button
        android:text="7"
        android:textSize="@dimen/size_principal"
        android:textColor="@color/colorPrimaryGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:id="@+id/btn_seven"
        android:layout_below="@+id/btn_clear"
        android:layout_alignRight="@+id/btn_clear"
        android:layout_alignEnd="@+id/btn_clear" />

    <Button
        android:text="8"
        android:textSize="@dimen/size_principal"
        android:textColor="@color/colorPrimaryGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:id="@+id/btn_height"
        android:layout_alignBaseline="@+id/btn_nine"
        android:layout_alignBottom="@+id/btn_nine"
        android:layout_toLeftOf="@+id/btn_seven"
        android:layout_toStartOf="@+id/btn_seven" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_multiplicator"

        android:text="X"
        android:background="@color/colorBlue"
        android:layout_below="@+id/btn_clear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="1dp" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textSize="@dimen/size_principal"
        android:textColor="@color/colorPrimaryGrey"
        android:id="@+id/btn_six"
        android:layout_below="@+id/btn_seven"
        android:layout_toRightOf="@+id/btn_five"
        android:layout_toEndOf="@+id/btn_five" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_divider"
        android:text="รท"
        android:textSize="@dimen/size_principal"
        android:background="@color/colorBlue"
        android:layout_alignTop="@+id/btn_clear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:id="@+id/btn_minus"
        android:textSize="@dimen/size_principal"
        android:layout_alignTop="@+id/btn_six"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryGrey"
        android:background="@color/colorWhite"
        android:textSize="@dimen/size_principal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_one"
        android:layout_above="@+id/btn_zero"
        android:layout_below="@+id/btn_five" />

    <Button
        android:text="2"
        android:textColor="@color/colorPrimaryGrey"
        android:background="@color/colorWhite"
        android:textSize="@dimen/size_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_one"
        android:layout_toEndOf="@+id/btn_one"
        android:id="@+id/btn_two"
        android:layout_above="@+id/btn_zero"
        android:layout_below="@+id/btn_five" />

    <Button
        android:text="3"
        android:textColor="@color/colorPrimaryGrey"
        android:background="@color/colorWhite"
        android:textSize="@dimen/size_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_five"
        android:layout_alignRight="@+id/btn_seven"
        android:layout_alignEnd="@+id/btn_seven"
        android:id="@+id/btn_three" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_three"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_zero"
        android:background="@color/colorWhite"
        android:textColor="@color/colorPrimaryGrey"
        android:textSize="@dimen/size_principal"
        android:layout_toStartOf="@+id/btn_three" />

    <Button
        android:text=","
        android:background="@color/colorWhite"
        android:textColor="@color/colorPrimaryGrey"
        android:textSize="@dimen/size_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_zero"
        android:layout_toRightOf="@+id/btn_two"
        android:layout_toEndOf="@+id/btn_two"
        android:id="@+id/btn_comma" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/backspace"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView"
        android:layout_toRightOf="@+id/textview_calcul"
        android:layout_alignBottom="@+id/textview_calcul" />

    <Button
        android:text="+"
        android:background="@color/colorBlue"
        android:textSize="@dimen/size_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_plus"
        android:layout_below="@+id/btn_six"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp" />

    <Button
        android:text="="
        android:background="@color/colorBlue"
        android:textSize="@dimen/size_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_result"
        android:layout_below="@+id/btn_plus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
